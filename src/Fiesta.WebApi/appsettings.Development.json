{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "GoogleOAuthOptions:ClientRedirectUri": "http://localhost:3000/google-login-callback",
  "GoogleOAuthOptions:ClientConnectAccountRedirectUri": "http://localhost:3000/settings?tab=signInMethods",
  "GoogleOAuthOptions:ClientDeleteAccountRedirectUri": "http://localhost:3000/settings?tab=deleteAccount",
  "WebClientOptions:BaseUrl": "http://localhost:3000",

  "HardDeleteUsersWorkerOptions": {
    "PollingPeriod": "00:00:30",
    "Enabled": false
  },

  "NotificationDeletionWorkerOptions": {
    "PollingPeriod": "00:00:30",
    "Enabled": false,
    "DeleteAfter": "7:00:00:00",
    "BatchSize": 1000
  }
}
